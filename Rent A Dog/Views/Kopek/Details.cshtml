@model KopekIlan
<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">İlan Detayları </h2>
		</div>

		

			@if (Model.Email==User.Identity.Name)
			{

				<div class="mb-3 row">
					<label asp-for="DogName"></label>
					<input asp-for="DogName"  type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogAge"></label>
					<input asp-for="DogAge"  type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogType"></label>
					<input asp-for="DogType"  type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogFeatures"></label>
					<input asp-for="DogFeatures"  type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogStartTime"></label>
					<input asp-for="DogStartTime"  type="date" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogEndTime"></label>
					<input asp-for="DogEndTime"  type="date" class="form-control" />
				</div>
				<div class="row">
					<div class="col-4">
					<button type="submit" asp-controller="Kopek" asp-action="Update" class="btn btn-primary form-control">Kaydet</button>
					</div>
					<div class="col-4">
						<button asp-route-Id="@Model.Id.ToString()" type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-4">
						<a asp-controller="Home" asp-action="Index" class="btn btn-secondary form-control">İlanlara git</a>
					</div>
				</div>

			}
			else
			{
				<div class="mb-3 row">
					<label asp-for="DogName"></label>
					<input asp-for="DogName" disabled type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogAge"></label>
					<input asp-for="DogAge" disabled type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogType"></label>
					<input asp-for="DogType" disabled type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogFeatures"></label>
					<input asp-for="DogFeatures" disabled type="text" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogStartTime"></label>
					<input asp-for="DogStartTime" disabled type="date" class="form-control" />
				</div>

				<div class="mb-3 row">
					<label asp-for="DogEndTime"></label>
					<input asp-for="DogEndTime" disabled type="date" class="form-control" />
				</div>
				<div class="row">
					<div class="col-12">
						<a asp-controller="Kopek" asp-action="Teklif" asp-route-Id="@Model.Id" class="btn btn-primary form-control">Teklifte Bulun</a>
					</div>
				</div>

			}
	</div>
</form>