@model IEnumerable<Teklif>

<div class="row pb-3">
	@foreach (var item in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<div class="card-body pb-0">
							<div class="pl-1">
								<p class="card-title h4 text-dark opacity-75 text-uppercase text-center">Name : @item.Name</p>
								<p class="card-title h4 text-dark opacity-75 text-uppercase text-center">Fiyat : @item.TeklifFİyat</p>
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">Not : <b>@item.Not</b></p>
							</div>
							<div class="pl-1">
								<p class=" h5 text-dark text-opacity-75 text-center mb-0">Phone NUmber : <span>@item.PhoneNumber</span></p>
							</div>
						</div>
						<div class="pl-1">
							@if (item.Enable)
							{
								<a asp-controller="Kopek" asp-action="TeklifEnabled" asp-route-Id="@item.Id" class="btn btn-success bg-gradient border-0 form-control">Kabul Edildi</a>
							}
							else
							{
								<a asp-controller="Kopek" asp-action="TeklifEnabled" asp-route-Id="@item.Id" class="btn btn-primary bg-gradient border-0 form-control">Kabul Et</a>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>